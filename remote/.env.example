# =============================================================================
# Remote Server Environment Variables
# =============================================================================
# This file is generated automatically by setup.sh with random passwords.
# DO NOT commit the actual .env file to version control!
#
# To manually create: copy this file to .env and fill in values.
# =============================================================================

# Domain (required - must match Terraform/Cloudflare setup)
DOMAIN=example.com

# PostgreSQL
POSTGRES_PASSWORD=<random-24-char-password>

# Grafana admin credentials
GF_SECURITY_ADMIN_PASSWORD=<random-24-char-password>

# MinIO (S3-compatible storage for Langfuse)
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=<random-24-char-password>

# Langfuse secrets
NEXTAUTH_SECRET=<random-24-char-password>
SALT=<random-24-char-password>

# LiteLLM
LITELLM_MASTER_KEY=sk-<random-24-char-password>

# LLM Provider API Keys (copy from .envrc)
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...

# Prometheus remote write authentication
# Share PROMETHEUS_REMOTE_PASSWORD with local server for remote_write
PROMETHEUS_REMOTE_USER=prometheus
PROMETHEUS_REMOTE_PASSWORD=<random-24-char-password>

# Retention settings
LOKI_RETENTION_HOURS=336h    # 14 days
PROMETHEUS_RETENTION_DAYS=14d
MINIO_RETENTION_DAYS=30

# Optional: Caddy password hashes (generated by setup.sh)
# PROMETHEUS_PASSWORD_HASH=$2a$14$...
# LOKI_PASSWORD_HASH=$2a$14$...
